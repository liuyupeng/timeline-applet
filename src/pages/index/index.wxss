/**index.wxss**/

.page__bd {
    width:100%;
    display:table;
}

.timeline {
    padding: 0;
    width: 90%;
    margin: 5% auto;
    position: relative;
}

.timeline:before {
    content: '';
    position: absolute;
    top: 0;
    left: 15px;
    height: 100%;
    width: 4px;
    background: #FFFFFF;
}

.timeline:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 7px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #FFFFFF;
}

.timeline .timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline .timeline-item:last-child {
    margin-bottom: 0;
}

.timeline-item_icon {
    width: 30px;
    height: 30px;
    
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 50%;
    background-color: #FFFFFF;
    border: 2px solid #FFFFFF;
}

.timeline-item_icon .timeline-item_icon_img {
    width: 30px;
    height: 30px;
    vertical-align: top;
}

.timeline-item_content {
    padding: 10px;
    margin-left: 50px;
    background: #FFFFFF;
    position: relative;
}

.timeline-item_content:before {
    content: '';
    position: absolute;
    top: 10px;
    right: 100%;
    height: 0;
    width: 0;
    border: 7px solid transparent;
    border-right: 7px solid #fff;
    border-color: transparent #FFFFFF transparent transparent;
}

.timeline-item_theme {
    font-size: 32rpx;
}

.timeline-item_context {
    padding: 5px 0;
    color: #333333;
    font-size: 30rpx;
}

.timeline-item_date {
    font-size: 28rpx;
    color: #666666;
}

