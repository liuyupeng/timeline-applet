.clear {
    clear: both;
}

.red {
    color: red;
}

.m-t {
    margin-top: 15px;
}

.pull-right {
    float: right;
}

page{
    font-size: 16px;
    background-color: #F1F1F1;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.page__hd {
    padding: 30px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.tip-text {
    font-size: 12px;
    color: #666666;
    padding: 10px 10px;
    line-height: 16px;
    background: #FFFFFF;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
}

.tip-text icon {
    height: 16px;
    margin-right: 5rpx;
    position: relative;
    top: -1px;
}

.tip-input {
    color: #808080;
}


.btn_plus {
    color: #1296db;
    font-size: 13px;
    line-height: 16px;
}

.btn_plus image {
    width: 16px;
    margin-right: 2px;
    vertical-align: top;
    position: relative;
    top: -1px;
}

