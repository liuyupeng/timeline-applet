.weui-loadmore__tips_in-line {
    background-color: #F1F1F1;
}

.justify_box {
    text-align: justify;
    text-align-last: justify;
    height: 2.58823529em;
    line-height: 2.58823529em;
}

.justify_box:after{
    content: '';
    width: 100%;
    display: inline-block;
}



.border-line {
    position: relative;
}

.border-line:before {
    content:" ";
    position: absolute;
    top:0;
    right:0;
    left: 0;
    height:1px;
    border-top:1rpx solid #d9d9d9;
    color:#d9d9d9;
}